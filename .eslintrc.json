{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true,
        "es6": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["import"],
    "ignorePatterns": ["node_modules/", "build/", "*.min.js"],
    "rules": {
      "global-require": "off"
    }
}
